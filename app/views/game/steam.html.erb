<section class="build-page content-container">
  <h1>Steam Guild</h1>

  <aside class="build-page__box build-page__index">
    <h2>Roster</h2>
    <div class="build-page__content">
      <%= turbo_frame_tag 'anyframe' do %>
        <div>
          <h3>Points: <%= local_assigns[:unitpoints] %> / <%= @points %></h3>
          <%= form_with scope: :any, url: turbo_frame_submit_path, local: true do |form| %>
            <%= form.label :unitpoints, 'Unit points'  %>
            <%= form.text_field :unitpoints, type: 'number', 'required' => 'true', 'value' => "0",  'aria-describedby' => 'unitpoints' %>
            <%= form.submit 'Add Unit', 'id' => 'submit-number', class: "button button--dark" %>
          <% end %>
        <div>
      <% end %>
    </div>
  </aside>

  <article class="build-page__box build-page__info">
    <h2>Units</h2>
    <div class="build-page__content">
      <h3>Leaders</h3>

      <div>
        <%= image_tag "cards/Comm_Badger_GuildMaster.png", alt: "Badger GuildMaster" %>
        <p>Badger GuildMaster: 50 Points</p>
      </div>

      <div>
        <%= image_tag "cards/Comm_Beaver_Engineer.png", alt: "Beaver Engineer" %>
        <p>Beaver Engineer: 30 Points</p>
      </div>

      <div>
        <%= image_tag "cards/Comm_Weasel_Taskmaster.png", alt: "Weasel Taskmaster" %>
        <p>Weasel Taskmaster: 40 Points</p>
      </div>


      <h3>Followers</h3>

      <div>
        <%= image_tag "cards/Comm_BadgerSoldier.png", alt: "Badger Soldier" %>
        <p>Badger Soldier: 10 Points</p>
      </div>

      <div>
        <%= image_tag "cards/Comm_Badger_Marksman.png", alt: "Badger Marksman" %>
        <p>Badger Marksman: 20 Points</p>
      </div>

      <div>
        <%= image_tag "cards/Comm_Weasel_Tracker.png", alt: "Weasel Tracker" %>
        <p>Weasel Tracker: 15 Points</p>
      </div>
    </div>
  </article>
</section>